<div class="container">

    <div class="page-header">
        <h3>Edit User</h3>
    </div>

    <div class="container">

        <form method="post" action="/cms/user/{{user._id}}" enctype="multipart/form-data" role="form" class="item-details">

            <input type="hidden" name="_method" value="PUT">

            <div class="form-group">
                <label for="title" >Username</label>
                <input type="text" name="username" value="{{user.username}}" placeholder="Enter the username" class="form-control" id="username" required>
            </div>

            <div class="form-group">
                <label for="title" >Password</label>
                <input type="text" name="password" value="{{user.password}}" placeholder="Enter the password" class="form-control" id="password" required>
            </div>

            <div class="toolbar-wrapper" style="position: relative; height: 95px;">
                <div class="toolbar toolbar-fixed" style="width: 100%; position: absolute; top: 0px;">
                    <button class="btn btn-primary" type="submit">Save</button>
                    <a href="/cms/user" class="btn btn-link btn-cancel">Cancel</a>
                </div>
            </div>

        </form>

    </div>

</div>

