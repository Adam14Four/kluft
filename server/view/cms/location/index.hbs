<div class="container">
    <div class="row">
        <div class="page-header col-md-10">
            <h3>Location</h3>
        </div>
        <div class="page-header col-md-2">
            <a href="/cms/location/new" class="btn btn-primary">Create a new Entry</a>
        </div>
    </div>
    <table class="table table-striped" id="tableList">
        <tbody class="table-hover">
            {{#each location}}
            <tr data-id="{{_id}}" data-order="{{@index}}">
                <td class="col-md-10">{{title}}</td>
                <td class="col-md-1"><a href="/cms/location/{{_id}}/destroy" class="btn btn-danger">Delete</a> </td>
                <td class="col-md-1"><a href="/cms/location/{{_id}}" class="btn btn-primary">Edit</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <nav class="text-center">
        <ul class="pagination">
            {{#pagination pages page "location"}}{{/pagination}}
        </ul>
    </nav>
</div>
 <script>
        window.onload = function() {
            $('.btn-danger').on('click', function(evt) {
                 if (!confirm('Are you sure?')) evt.preventDefault();
            });
        }
        </script>
 